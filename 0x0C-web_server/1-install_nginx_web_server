#!/usr/bin/env bash
# This Script installs nginx and have a file in it that returns Hello World

if ! sudo apt update && sudo apt install -y nginx; then
    echo -e \
    "http{
    root /var/www/school;
    index index.html index.htm
    Server{
        listen 80;
        location \ {
        }
    }
    }
    events{
    }" > /etc/nginx/nginx.conf
        mkdir -p /var/www/school
        echo "hello World!" > \
        /var/www/school/index.html
        if ! service nginx start; then
            echo "Cannot start nginx"
            exit 1
        fi
else
    echo "Nginx is up and running"
fi
exit 0
